---
import i18next, {t} from "i18next";
---
<section class="flex mt-44 flex-col lg:flex-row items-center overflow-hidden max-w-7xl w-full mx-auto justify-between">
    <div class="flex items-start w-full lg:w-auto px-2 lg:px-0 flex-col">
        <h4 class="font-asset text-lg lg:text-3xl">{t('newsletter.title')}</h4>
        <p class="font-poppins lg:text-4xl mt-5">{t('newsletter.text')}</p>
    </div>
    <form action="">
        <div class="flex rounded-full py-1 px-2" style="box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.4);">
            <input type="text" placeholder={t('newsletter.email')}><button class="rounded-full py-1 px-8 text-white bg-black">{t('newsletter.submit')}</button>
        </div>
    </form>
</section>